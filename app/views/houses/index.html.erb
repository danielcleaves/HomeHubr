<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Houses", houses_path, class: "sidebar-link active"%></li>
			<li class="sidebar-item"><%= link_to "Your Leads", your_leads_path, class: "sidebar-link active"%></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Houses
			</div>
			<div class="panel-body">
				<% @houses.each do |house| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag house.cover_photo(:thumb) %>
						</div>
						<div class="col-md-4">
							<h4><%= house.listing_name %></h4>
						</div>
						<div class="col-md-3">
							<% if house.active %>
								<%= link_to "Unpublish", unpublish_house_path(house), class: "btn btn-form" %>
							<% else %>
								<%= link_to "Publish", publish_house_path(house), class: "btn btn-form" %>
							<% end %>
						</div>
						<div class="col-md-3 right">
							<%= link_to "Update", listing_house_path(house), class: "btn btn-form" %>
						</div>
					</div>
					<hr/>
				<% end %>
			</div>
		</div>
	</div>
</div>
