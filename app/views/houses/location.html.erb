<div class="row">
	<div class="col-md-3">
		<%= render 'house_menu'%>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Location
			</div>

			<div class="panel-body">
				<div class="container">
					<%= form_for @house do |f| %>
						<div class="row">
							<div class="form-group">
								<label>Address</label>
								<%= f.text_field :address, placeholder: "Street Address", class: "form-control", required:true %>
							</div>
							<div class="form-group">
								<label>City</label>
								<%= f.text_field :city, placeholder: "City", class: "form-control", required:true %>
							</div>
							<div class="form-group">
								<label>State</label>
								<%= f.text_field :state, placeholder: "State", class: "form-control", required:true %>
							</div>
							<div class="form-group">
								<label>Zip</label>
								<%= f.text_field :zip_code, placeholder: "Zip code", class: "form-control", required:true %>
							</div>
							<div class="form-group">
								<label>Neighborhood</label>
								<%= f.text_field :Neighboorhood, placeholder: "What part of town is the property located", class: "form-control", required:false %>
							</div>
						</div>
						<div class="text-center">
							<%= f.submit "Save", class: "btn btn-form" %>
						</div>
						<div class="help-tip">
	    					<p>Please make sure you list the accurate address; for searching purposes. </p>
						</div>
					<% end %>
				</div>
			</div>

		</div>
	</div>
</div>