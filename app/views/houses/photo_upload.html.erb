<div class="row">
	<div class="col-md-3">
		<%= render 'house_menu'%>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Photos
			 <div class="help-tip">
    			<p>Adding photos increase your chances of attracting more buyers.</p>
			</div>
			</div>
			<div class="panel-body">
				<div class="container">
					<div class="row">
						<div class="col-md-offset-3 col-md-6">
							<!-- Photo Upload -->
							<%= form_for @house, url: house_photos_path(@house), method: 'post', html: {multipart: true} do |f |%>

							<div class="row">
								<p>image(s) must be <%= Photo::REQUIRED_WIDTH %> x	<%= Photo::REQUIRED_HEIGHT %> </p>
								<div class="form-group">
									<span class="btn btn-default btn-file text-babu">
										<i class = "fa fa-cloud-upload" aria-hidden="true"></i>
										Select Photos
										<%= file_field_tag "images[]", type: :file, multiple: true %>
									</span>
								</div>
							</div>


								<div class="text-center">
									<%= f.submit "Add Photos", class: "btn btn-form", data: { disable_with: "uploading ..." } %>
								</div>

							<% end %>
						</div>
					</div>
					<div id="photos"><%= render 'photos/photos_list' %></div>
				</div>
			</div>

		</div>
	</div>
</div>
